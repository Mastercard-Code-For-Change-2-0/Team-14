{
  "name": "mern-auth-boilerplate",
  "version": "1.0.0",
  "description": "Complete MERN stack authentication boilerplate with MongoDB, Express, React, and Node.js",
  "main": "index.js",
  "scripts": {
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "start:backend": "cd backend && npm start",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "clean": "rm -rf node_modules backend/node_modules frontend/node_modules",
    "clean:install": "npm run clean && npm run install:all"
  },
  "keywords": [
    "mern",
    "authentication",
    "boilerplate",
    "mongodb",
    "express",
    "react",
    "nodejs",
    "jwt",
    "auth",
    "fullstack"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.0.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/mern-auth-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/mern-auth-boilerplate/issues"
  },
  "homepage": "https://github.com/yourusername/mern-auth-boilerplate#readme"
}

